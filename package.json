{
  "name": "shopify-chatbot-app",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.10"
  },
  "scripts": {
    "build": "node scripts/switch-db.js postgresql && npx prisma generate && react-router build",
    "build:dev": "node scripts/switch-db.js sqlite && react-router build",
    "dev": "node scripts/switch-db.js sqlite && shopify app dev",
    "dev:router": "node scripts/switch-db.js sqlite && react-router dev",
    "db:switch": "node scripts/switch-db.js",
    "db:sqlite": "node scripts/switch-db.js sqlite",
    "db:postgresql": "node scripts/switch-db.js postgresql",
    "postinstall": "node scripts/switch-db.js",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "start": "node scripts/migrate-and-start.js",
    "start:server": "react-router-serve ./build/server/index.js",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "react-router typegen && tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@react-router/dev": "^7.9.1",
    "@react-router/node": "^7.9.1",
    "@react-router/serve": "^7.9.1",
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/shopify-app-react-router": "^1.0.0",
    "@shopify/shopify-app-session-storage-prisma": "^7.0.0",
    "isbot": "^5.1.0",
    "prisma": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.9.1",
    "openai": "^4.47.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "typescript": "^5.2.2",
    "eslint": "^8.38.0",
    "vite": "^5.0.0"
  },
  "workspaces": [
    "extensions/*"
  ]
}







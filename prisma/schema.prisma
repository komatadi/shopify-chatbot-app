// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id          String   @id
  shop        String
  state       String
  isOnline    Boolean  @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([shop])
}

model Conversation {
  id         String   @id @default(cuid())
  shopId     String
  customerId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  messages Message[]

  @@index([shopId])
  @@index([customerId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           String       // 'user' | 'assistant' | 'system'
  content        String
  timestamp      DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([timestamp])
}

model StoreSettings {
  id          String   @id @default(cuid())
  shopId      String   @unique
  openaiKey   String?
  systemPrompt String? @default("You are a helpful customer support assistant for a Shopify store. Help customers find products, answer questions about policies and FAQs, and check order status.")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([shopId])
}






